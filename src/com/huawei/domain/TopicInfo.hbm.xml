<?xml version="1.0" encoding="GBK"?>
<!-- 指定Hibernate映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.huawei.domain">
	<class	name="TopicInfo"	table="tb_TopicInfo">
		<!-- 映射标识属性 -->
		<id	name="id" type="long" column="id">
			<!-- 指定使用identity主键生成策略 -->
			<generator class="native"/>
		</id>
		<!-- 映射普通属性 -->
		<many-to-one name="srcUser" column="registerUser_id" class="RegisterUser"/>
		<many-to-one name="topic" column="topic_id" class="Topic"/>
  
		<property name="info" column="info"
			type="string" not-null="true" />
		<property name = "dateCreated" type = "timestamp" >
	    	<column name = "dateCreated"  />
	    </property>
	</class>
</hibernate-mapping>